{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Android: Run Release",
            "type": "shell",
            "command": "ni",
            "args": [
                "release",
                "-r"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Android: Build Apk(Split Api)",
            "type": "shell",
            "command": "ni",
            "args": [
                "release",
                "-s"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Android: Build AAB",
            "type": "shell",
            "command": "ni",
            "args": [
                "release",
                "-a"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Mac: Install From Local Code",
            "type": "shell",
            "command": "ni",
            "args": [
                "release",
                "-m"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Mac: Build Mac App",
            "type": "shell",
            "command": "ni",
            "args": [
                "release",
                "--build-mac"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Mac: Generate Mac App",
            "type": "shell",
            "command": "ni",
            "args": [
                "release",
                "--gen-mac-app"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Default: Upload Build Package",
            "type": "shell",
            "command": "ni",
            "args": [
                "default",
                "-u"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Default: Clean Build Cache",
            "type": "shell",
            "command": "ni",
            "args": [
                "release",
                "--clean-build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}